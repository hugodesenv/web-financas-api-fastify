generator client {
  provider = "prisma-client-js"
}

enum EntryType {
  income
  expense
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id       Int     @id @default(autoincrement())
  name     String  @db.VarChar(80)
  nickname String  @db.VarChar(80)
  active   Boolean @default(false) @db.Boolean
  Entry    Entry[]
}

model Account {
  id       String  @id @default(uuid()) @db.Uuid
  username String  @unique
  password String
  active   Boolean @default(false) @db.Boolean
}

model Purpose {
  id          Int     @id @default(autoincrement())
  description String  @db.VarChar(40)
  Entry       Entry[]
}

model Entry {
  id         Int       @id @default(autoincrement())
  person     Person    @relation(fields: [person_id], references: [id])
  person_id  Int
  purpose    Purpose   @relation(fields: [purpose_id], references: [id])
  purpose_id Int
  total      Decimal   @default(0) @db.Decimal(15, 7)
  type       EntryType
}

model Bank_account {
  id            String   @id @default(uuid()) @db.Uuid
  description   String   @db.VarChar(40)
  active        Boolean  @default(false) @db.Boolean()
  initial_value Decimal  @default(0) @db.Decimal(15, 7)
  initial_date  DateTime @db.Date()
}
